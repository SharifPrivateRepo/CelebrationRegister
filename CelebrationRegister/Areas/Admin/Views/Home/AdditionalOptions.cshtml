@using CelebrationRegister.Data.Entities
@model List<CelebrationRegister.Data.Entities.AdditionalOptions.AdditionalOptions>

@{
    var grade = ViewData["Grade"] as Grade;
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت پایه های تحصیلی</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    <div class="col-md-6">
        <div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    پایه های تحصیلی ثبت شده
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>شماره ردیف</th>
                                    <th>نام مورد</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OptionId</td>
                                        <td>@item.OptionTitle</td>
                                        <td>
                                            <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Home" asp-action="DeleteOption" asp-route-optionId="@item.OptionId">
                                                ویرایش
                                            </a>
                                            <span>|</span>
                                            <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Home" asp-action="DeleteOption" asp-route-optionId="@item.OptionId">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>

    <div class="col-md-6">
        <form method="post" asp-area="Admin" asp-controller="Home" asp-action="AdditionalOptions">

            <div class="panel panel-success">
                <div class="panel-heading">
                    @ViewData["PanelTitle"]
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام مورد تشویقی</label>
                        @if (grade != null)
                        {
                            <input type="hidden" value="@grade.GradeId" name="gradeId" />
                        }
                        <input id="gradeTitle" name="optionTitle" class="form-control" value="">
                        <p class="help-block">
                            نام مورد تشویقی به همین صورت به کاربر نمایش داده می شود.
                        </p>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="gradeTitle" value=" ثبت " class="btn btn-success">
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
        </form>


    </div>
</div>
