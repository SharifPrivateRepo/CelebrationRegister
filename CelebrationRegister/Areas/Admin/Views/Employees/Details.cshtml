@model CelebrationRegister.Data.Entities.Employee

@{
    ViewData["Title"] = "جزئیات";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultLayout.cshtml";
}

<h1>جزئیات کارمند @Model.FullName</h1>

<div class="panel panel-info">
    <div class="panel-heading">
        جزئیات کاربر
    </div>
    <div class="panel-body">
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NationalCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NationalCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProsonnelCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProsonnelCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ChildCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ChildCount)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning"> ویرایش </a> |
            <a asp-action="Index" class="btn btn-primary"> باز گشت به فهرست </a>
        </div>


    </div>
</div>

