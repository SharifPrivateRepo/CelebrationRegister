@model CelebrationRegister.Data.Entities.Child

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultLayout.cshtml";
}

<h1>مشخصات فرزند "@Model.Employee.FullName"</h1>

<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
           جزئیات اطلاعات فرزند
        </div>
        <div class="panel-body">
            <div>
                <h4>@Model.FullName</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReportCardId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ReportCardId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsDelete)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsDelete)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Grade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Grade.GradeTitle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Employee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Employee.FullName)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ChildId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
        <div class="panel-footer">
            Panel Footer
        </div>
    </div>
</div>

